<% provide :title, t(".reset") %>
<h1><%= t ".reset" %></h1>
<div class="row">
  <div class="col-12">
    <%= form_with(model: @user, local: true, role: "form", url: password_reset_path(params[:id])) do |form| %>
      <% if @user.errors.any? %>
        <%= render "shared/errors", obj: @user %>
      <% end %>
      <%= hidden_field_tag :email, @user.email %>
      <div class="form-group row my-4">
        <div class="col-form-label col-sm-4">
          <%= form.label :password, t(".password") %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :password, class: "form-control", placeholder: t(".password"), autofocus: true %>
        </div>
      </div>
      <div class="form-group row my-4">
        <div class="col-form-label col-sm-4">
          <%= form.label :password_confirmation, t(".password_confirmation") %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirmation") %>
        </div>
      </div>
      <div class="form-group d-flex flex-column align-items-center">
        <div class="col-sm-4">
          <%= form.submit t(".submit"), class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
