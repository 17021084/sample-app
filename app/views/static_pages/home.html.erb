<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <hr/>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".headline" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <%= render "shared/un_auth_view" %>
<% end %>
