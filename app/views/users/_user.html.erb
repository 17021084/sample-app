 <% users.each do |user| %>
  <li>
    <%= gravatar_for user, size: Settings.validations.user.avatar_size %>
    <%= link_to user.name, user_path(locale, user) %>
    <% if current_user.admin? && !current_user?(user) %>| 
      <%= link_to t(".delete"), user, method: :delete,
                                    data: { confirm: t(".confirm") } 
      %>
    <% end %>
  </li>
<% end %>
