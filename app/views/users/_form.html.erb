<div class="row">
  <div class="col-12">
    <%= form_with(model: @user, local: true, role: "form")  do |form| %>
      <% if @user.errors.any? %>
        <%= render "shared/errors", obj: @user %>
      <% end %>
      <div class="form-group row my-4">
        <div class="col-form-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :name, class: "form-control", placeholder: t(".username"), autofocus: true%>
        </div>
      </div>
      <div class="form-group row my-4">
        <div class="col-form-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-6">
          <%= form.email_field :email, class: "form-control", placeholder: t(".email") %>
        </div>
      </div>
      <div class="form-group row my-4">
        <div class="col-form-label col-sm-2">
          <%= form.label :password %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :password, class: "form-control", placeholder: t(".password") %>
        </div>
      </div>
      <div class="form-group row my-4">
        <div class="col-form-label col-sm-2">
          <%= form.label :password_confirmation %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirmation") %>
        </div>
      </div>
      <div class="form-group row d-flex justify-content-center align-items-center">
        <div class="col-sm-4">
          <%= form.submit @user.new_record? ? t(".signup"): t(".update"), class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      <% unless logged_in? %>
        <p><%= t ".old_user" %> <%= link_to t(".login"), login_path(locale) %></p>
      <% end %>
    <% end %>
    <% if logged_in? %>
      <div class="gravatar_edit d-flex justify-content-center align-items-center">
        <%= link_to Settings.gravatar.link, target: '_blank' do %>
          <% gravatar_for @user  %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
