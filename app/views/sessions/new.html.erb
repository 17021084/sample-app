<% provide :title, t(".login") %>
<h1><%= t ".login" %></h1>
<%= form_with(scope: :session, local: true, class: "form-horizontal", role: "form", url: login_path)  do |form| %>
  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= form.label :email, t(".email") %>
    </div>
    <div class="col-sm-6">
      <%= form.email_field :email, class: "form-control", placeholder: t(".email"), autofocus: true%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= form.label :password, t(".password") %>
    </div>
    <div class="col-sm-6">
      <%= form.password_field :password, class: "form-control", placeholder: t(".password"), autocomplete: "off" %>
    </div>
    <div class="col-sm-6 mt-3">
      <%= form.label :remember_me, class: "checkbox inline" do %>
        <%= form.check_box :remember_me %>
        <span><%= t ".remember" %></span>
        <span> <%= link_to t(".forget"), new_password_reset_path %></span>
      <% end %>
    </div>
  </div>
  <div class="form-group d-flex flex-column align-items-center">
    <div class="col-sm-4">
      <%= form.submit t(".login"), class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <p><%= t ".newuser" %> <%= link_to t(".signup"), signup_path(locale) %></p>
<% end %>
