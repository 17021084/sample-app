<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.validations.user.avatar_size), micropost.user %>
  <span class="user">
    <%= link_to micropost.user_name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t "users.show.posted" %> <%= time_ago_in_words micropost.created_at %> <%= t "users.show.ago" %>
    <% if current_user? micropost.user %>
      <%= link_to t("users.user.delete"), micropost_path(locale, micropost), method: :delete,
                                    data: { confirm: t("users.user.confirm") } %>
    <% end %>
  </span>
</li>
